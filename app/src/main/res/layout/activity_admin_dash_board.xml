<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".AdminDashBoardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/cardViewTeacherDashBoard">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senior High School Department"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_reg"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/admin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Administrator Account"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_reg"
                    android:textSize="14dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:layout_below="@id/cardViewTeacherDashBoard">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/relativeCard1">
            <LinearLayout
                android:id="@+id/btnSubject"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:background="@drawable/rounded_card"
                android:paddingVertical="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/books_subject" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/zxing_transparent"
                    android:fontFamily="@font/montserrat_reg"
                    android:paddingVertical="0dp"
                    android:text="Subjects"
                    android:textColor="#18BA21" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnViewAnalytics"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:background="@drawable/rounded_card"
                android:paddingVertical="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/statistics" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/zxing_transparent"
                    android:fontFamily="@font/montserrat_reg"
                    android:paddingVertical="0dp"
                    android:text="View Analytics"
                    android:textColor="#18BA21" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnManageUsers"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:layout_margin="4dp"
                android:paddingVertical="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/user" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/zxing_transparent"
                    android:fontFamily="@font/montserrat_reg"
                    android:paddingVertical="0dp"
                    android:text="Manage Users"
                    android:textColor="#18BA21" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnLogout"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:background="@drawable/rounded_card"
                android:layout_margin="4dp"
                android:paddingVertical="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/logout" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/zxing_transparent"
                    android:fontFamily="@font/montserrat_reg"
                    android:paddingVertical="0dp"
                    android:text="Log out"
                    android:textColor="#18BA21" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    </LinearLayout>
</ScrollView>