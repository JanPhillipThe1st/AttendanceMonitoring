<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ViewStudentAttendance">

    <TextView
        android:id="@+id/tvMonthName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="..."
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_reg"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        />

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        android:id="@+id/compactCalendarView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:elevation="1dp"
        android:padding="16dp"
        app:compactCalendarBackgroundColor="#FFFFFF"
        app:compactCalendarCurrentDayBackgroundColor="#FFEB3B"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#5CE114"
        app:compactCalendarDisplayOtherMonthDays="false"
        app:compactCalendarOtherMonthDaysTextColor="#131313"
        app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="false"
        app:compactCalendarTextSize="16sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Attendance"
        android:fontFamily="@font/montserrat_reg"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp" />

</LinearLayout>
