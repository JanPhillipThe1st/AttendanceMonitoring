<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/rounded_card"
    android:padding="5dp"
    android:gravity="center_vertical"
    android:layout_marginVertical="4dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civStudentImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_person_outline_24"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvStudentName"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_reg"
            android:text="Student Name here..."
            android:textColor="@color/secondary"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvStudentGrade"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_reg"
            android:text="Strand"
            android:textColor="@color/secondary"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvStudentStrand"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_reg"
            android:text="Track / Strand"
            android:textColor="@color/secondary"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvAbsences"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_reg"
            android:text="Absences: "
            android:textColor="#952121"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:visibility="gone"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/montserrat_reg"
                android:text="Punctuality"
                android:textColor="@color/secondary"
                android:textSize="14sp" />
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/lpiPunctuality"
            android:layout_height="10dp"
            android:max="100"
            android:min="0"
            android:progress="80"
            android:progressTint="@color/yellowGreen" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>